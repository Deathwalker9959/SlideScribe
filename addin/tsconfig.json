{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "noEmitOnError": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ]
    ,
    "paths": {
      "@components/*": ["src/taskpane/components/*"],
      "@ui/*": ["src/taskpane/components/ui/*"],
      "@styles/*": ["src/taskpane/styles/*"],
      "@utils/*": ["src/taskpane/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd"
  ],
  "ts-node": { 
    "files": true 
  }
}
