# Environment Configuration
USE_AZURE_OPENAI=true
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-endpoint
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-07-18

# Azure AI Services (Computer Vision, etc.)
AZURE_VISION_ENDPOINT=https://your-vision-endpoint
AZURE_VISION_KEY=your-azure-vision-key
IMAGE_ANALYSIS_PROVIDER=azure

# Azure Speech Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=westeurope

# Azure AI Foundry Project (Alternative endpoint)
AZURE_AI_FOUNDRY_ENDPOINT=https://your-azure-ai-foundry-endpoint

# Enable Azure OpenAI for vision tasks
USE_AZURE_OPENAI_VISION=true

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pptx_tts

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# JWT Configuration
JWT_SECRET_KEY=slidescribe-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# File Storage
MEDIA_ROOT=/app/media
MAX_FILE_SIZE=100MB

# TTS Configuration
DEFAULT_VOICE=en-US-AriaNeural
DEFAULT_SPEED=1.0
DEFAULT_PITCH=0
SUPPORTED_FORMATS=["mp3", "wav", "ogg"]

# AI Configuration
MAX_TEXT_LENGTH=10000
TEMPERATURE=0.7
MAX_TOKENS=2000

# Performance Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_SECONDS=300

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Analytics Configuration
ANALYTICS_ENABLED=true
TELEMETRY_SAMPLE_RATE=0.1
ANALYTICS_EXPORT_TTL_HOURS=24
ANALYTICS_EXPORT_DIR=/app/analytics_exports

# Voice Profile Configuration
VOICE_PROFILE_STORAGE_DIR=/app/voice_profiles
VOICE_PROFILE_MAX_SIZE=10485760
VOICE_PROFILE_CACHE_TTL=3600

# Subtitle Configuration
SUBTITLE_DEFAULT_LANGUAGE=en-US
SUBTITLE_MAX_CHARS_PER_LINE=42
SUBTITLE_MAX_LINES=2

# OpenAI Configuration (if not using Azure)
OPENAI_API_KEY=

# Additional Services
PIPELINE_CONFIG_PATH=
PIPELINE_FLAG_=
