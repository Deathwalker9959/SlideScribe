# Environment Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI Configuration (Optional - for routing OpenAI models through Azure)
# If USE_AZURE_OPENAI=true, all OpenAI API calls will route through Azure OpenAI Service
USE_AZURE_OPENAI=false
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4  # Your deployment name in Azure
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Vision (for image analysis via Azure OpenAI)
USE_AZURE_OPENAI_VISION=false  # Set to true to use Azure OpenAI for vision tasks

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Azure Vision Services (for direct Azure Computer Vision API)
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com
AZURE_VISION_KEY=your_azure_vision_key_here
IMAGE_ANALYSIS_PROVIDER=azure  # options: azure | openai | stub
IMAGE_ANALYSIS_OPENAI_MODEL=gpt-4o-mini

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/pptx_tts

# Redis Configuration
REDIS_URL=redis://redis:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# File Storage
MEDIA_ROOT=/app/media
MAX_FILE_SIZE=100MB

# TTS Configuration
DEFAULT_VOICE=en-US-AriaNeural
DEFAULT_SPEED=1.0
DEFAULT_PITCH=0
SUPPORTED_FORMATS=["mp3", "wav", "ogg"]

# AI Configuration
MAX_TEXT_LENGTH=10000
TEMPERATURE=0.7
MAX_TOKENS=2000

# Analytics and Telemetry Configuration
ANALYTICS_ENABLED=true
ANALYTICS_EXPORT_TTL_HOURS=24
ANALYTICS_EXPORT_DIR=./analytics_exports
TELEMETRY_SAMPLE_RATE=1.0  # 1.0 = 100% sampling, 0.5 = 50% sampling

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_CONNECTION_TIMEOUT=300

# Voice Profile Configuration
VOICE_PROFILE_STORAGE_DIR=./voice_profiles
VOICE_PROFILE_MAX_SIZE=1MB
VOICE_PROFILE_CACHE_TTL=3600

# Job Queue Configuration
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5
QUEUE_VISIBILITY_TIMEOUT=300
QUEUE_MESSAGE_TTL=3600

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24 hours
OAUTH2_ENABLED=true

# Performance Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_SECONDS=1800  # 30 minutes
SLIDE_PROCESSING_BATCH_SIZE=5

# Subtitle Configuration
SUBTITLE_DEFAULT_LANGUAGE=en
SUBTITLE_MAX_CHARS_PER_LINE=42
SUBTITLE_MAX_LINES=2
SUBTITLE_MIN_DURATION=1.0
SUBTITLE_MAX_DURATION=7.0

# Export Configuration
EXPORT_TEMP_DIR=./temp_exports
EXPORT_CLEANUP_INTERVAL=3600  # 1 hour
EXPORT_MAX_SIZE_PER_FILE=500MB
